{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <br>
    <h1 class="text-center">Bienvenue sur TurboPermis</h1>
    <h2 class="text-center">Le permis que l'on passe Ã  toute vitesse</h2>
    <br>
    <div class="container col-3 d-flex flex-column justify-content-center">
        <form action="{{ path('app_login') }}" method="post">
            <div class="form-group">
                <label class="form-label" for="username">Login:</label>
                <input required class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Votre login"/>
            </div>
            <div class="form-group mt-2">
                <label class="form-label" for="password">Password:</label>
                <input required class="form-control" type="password" id="password" name="_password"/>
            </div>
            {% if error %}
                <div class="alert-danger text-center mt-2 rounded">{{ error }}</div>
            {% endif %}
            {#If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/eleve"/>#}

            <button class="form-control btn btn-outline-primary mt-2" type="submit">Connexion</button>
        </form>
        <form action="{{ path('app_eleve_new') }}">
            <button class="form-control btn btn-outline-secondary mt-2" type="submit">Inscription</button>
        </form>
    </div>

{% endblock %}
