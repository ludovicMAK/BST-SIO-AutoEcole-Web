{% extends 'base.html.twig' %}

{% block title %}Réservation{% endblock %}

{% block body %}
    <div class="container">
            <br>
            <h1 class="text-center">Réservation d'une leçon</h1>
            <br>
            <div class="">
                    <form class="d-flex flex-column justify-content-center" id="AjouterLecon" method="POST" action="{{ path("app_lecon_new") }}">
                        <h3 class="text-center">Sélectionnez une catégorie:</h3>
                        <div class="d-flex flex-row justify-content-center">
                            {% for categorie in lesCateg %}
                                <input class="btn-check" type="radio" id="{{ categorie.id }}" name="categ" value="{{ categorie.id }}">
                                <label class="btn btn-outline-primary" for="{{ categorie.id }}">{{ categorie.libelle }}</label>
                            {% endfor %}
                        </div>
                        <br>
                        <h3 class="text-center">Sélectionnez une date et une heure:</h3>
                        <div class="d-flex flex-row justify-content-center">
                            <div id="selectDate">
                                <input class="form-control" type="date" id="date" name="date" disabled>
                            </div>
                            <div>
                                <select class="form-select" id="horaire" name="horaire" disabled>
                                    <option selected disabled> Choisir une date</option>
                                    <option value="09:00"> 09:00</option>
                                    <option value="10:00"> 10:00</option>
                                    <option value="11:00"> 11:00</option>
                                    <option value="12:00"> 12:00</option>
                                    <option value="13:00"> 13:00</option>
                                    <option value="14:00"> 14:00</option>
                                    <option value="15:00"> 15:00</option>
                                    <option value="16:00"> 16:00</option>
                                    <option value="17:00"> 17:00</option>
                                    <option value="18:00"> 18:00</option>
                                </select>
                            </div>
                        </div>
                        <br>
                        <div class="col-xs1 col-sm4 d-none" id="content">
                            {% include "eleve/_content.html.twig" %}
                        </div>

                        <div class="d-flex justify-content-center">
                            <button class="btn btn-outline-success w-25" id="btnSubmit" disabled>Valider</button>

                        </div>
                    </form>
                    <form class="w-25" method="POST" action="{{ path("app_eleve_dashboard") }}">
                        <input class="form-control btn btn-outline-secondary w-25" type="submit" value="Retour">
                    </form>
                    <div id="erreur">

                    </div>
            </div>
    </div>

{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/ajaxAjouterLecon.js') }}"></script>
{% endblock %}

