{% extends 'base.html.twig' %}

{% block title %}Lecon index{% endblock %}

{% block body %}
    <h1>Lecon index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Heure</th>
                <th>Payee</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lecon in lecons %}
            <tr>
                <td>{{ lecon.id }}</td>
                <td>{{ lecon.date ? lecon.date|date('Y-m-d') : '' }}</td>
                <td>{{ lecon.heure }}</td>
                <td>{{ lecon.payee ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_lecon_show', {'id': lecon.id}) }}">show</a>
                    <a href="{{ path('app_lecon_edit', {'id': lecon.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_lecon_new') }}">Create new</a>
{% endblock %}
