<form method="post" action="{{ path('app_categorie_delete', {'id': categorie.id}) }}" onsubmit="return true;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie.id) }}">
    <div class="modal" id="exampleModal{{ categorie.id }}" tabindex="-1" aria-labelledby="exampleModalLabel{{ categorie.id }}" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel{{ categorie.id }}">Suppression de la catégorie</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Vous allez supprimer la catégorie: {{ categorie.libelle }}!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button class="btn btn-outline-danger">Confirmer</button>
                </div>
            </div>
        </div>
    </div>
    <a class="btn btn-outline-danger" href="#" data-bs-toggle="modal" data-bs-target="#exampleModal{{ categorie.id }}">Supprimer</a>

</form>
